package marmot.script.plan


def methodMissing(String name, args) {
	if ( name != 'plan') {
		println "GPlanBuilder: methodMissing: name=$name, args=$args"
		return;
	}
	
	GPlanBuilder builder = new GPlanBuilder(marmot, args[0])
	Closure script = (Closure)args[1]
	script.delegate = builder
	script.resolveStrategy = Closure.DELEGATE_FIRST;
	script()
	
	builder.build();
}